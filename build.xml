<project name="19-Abgabe02-Prassl-Walenta" default="jar">

	<target name="clean">
		<delete dir="build"/>
		<echo message="Build-folder has been deleted. Everything is on start"/>
	</target>
		
	<target name="compile" depends="clean">
		<mkdir dir="build/classes"/>
		<javac srcdir="src\main\java\at\fhj\iit" destdir="build/classes" includeantruntime="false"/>
