	</target>	
	
	<target name="jar" depends="compile">
		<mkdir dir="build/jar"/>
		<jar destfile="build/jar/assignment.jar" basedir="build/classes">
			<manifest>
				<attribute name="Main-Class" value="assigment"/>
			</manifest>
		</jar>
	</target>
	
</project>	